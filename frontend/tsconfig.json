{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "resolveJsonModule": true,
    "checkJs": false,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "$lib/*": ["./src/lib/*"]
    }
  },
  "include": ["src"],
  "exclude": ["bindings"]
}
